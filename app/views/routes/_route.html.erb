<tr>
  <td><%= link_to route.name, route_path(route) %></td>
    <td> <%= route.total_distance_in_km.round(2) %> </td>
    <% if route.has_track? -%>
      <td> <%= route.max_speed_in_kph.round(2) %> </td>
      <td> <%= route.average_speed_in_kph.round(2) %> </td>
      <td> <%= display_time(route.total_time_in_seconds) %> </td>
      <td> <%= route.start %> </td>
    <% else -%>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
    <% end -%>
</tr>
